<Page x:Class="MuspelheimExchange.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MuspelheimExchange.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DashboardPage">

    <Grid Background="WhiteSmoke">
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" 
                BorderBrush="Black" BorderThickness="1" Background="DarkGray">
            <StackPanel>
                <Label Content="Main Menu" HorizontalAlignment="Center" FontSize="18" FontFamily="Times New Roman"/>
                <Button x:Name="Menu_Navigate_Search_Btn" Content="Search OSRS Items" Click="Menu_Navigate_Search_Btn_Click"
                        Margin="4,2" Padding="3" FontFamily="Times New Roman"/>
                <Button x:Name="Menu_Navigate_Catalogues_Btn" Content="Browse OSRS Item Catalogues" Click="Menu_Navigate_Catalogues_Btn_Click"
                        Margin="4,2" Padding="3" FontFamily="Times New Roman"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
